<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- copied stats from the hood which is comparable -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>StarWarsRaces_Ewok_Hood</defName>
    <label>ewok hood</label>
    <description>Simple hood made of primitive material.</description>
    <recipeMaker>
      <researchPrerequisite>StarWarsRaces_EwokApparel</researchPrerequisite>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <thingCategories>
      <li>StarWarsRaces_EwokHatCategory</li>
    </thingCategories>
    <graphicData>
      <texPath>StarWarsRaces/Ewok/Hat/Head_Covering_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <tradeability>Sellable</tradeability>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>6000</WorkToMake>
      <Mass>0.1</Mass>
      <EquipDelay>0.8</EquipDelay>
      <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.2</SocialImpact>
    </equippedStatOffsets>
    <costStuffCount>50</costStuffCount>
    <generateCommonality>0.01</generateCommonality>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>StarWarsRaces/Ewok/Hat/Head_Covering1</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>StarWarsRaces_EwokApparelTag</li>
      </tags>
      <defaultOutfitTags>
        <li>StarWarsRaces_EwokApparelTag</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.4,0.3,0.15)</only>
        </li>
        <li>
          <weight>15</weight>
          <only>(0.6,0.45,0.18)</only>
        </li>
        <li>
          <weight>20</weight>
          <only>(0.8,0.6,0.23)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>


  <!-- updated to be more of a copy of tribalwear allows ewoks to arrive non naked for ideology sake-->
  <ThingDef ParentName="ApparelBase">
    <defName>StarWarsRaces_Ewok_Parka</defName>
    <label>ewok tabard</label>
    <description>A full-body garment crafted using neolithic tools. While it may look primitive, it is effective at insulating the wearer.</description>
    <graphicData>
      <texPath>StarWarsRaces/Ewok/Clothing/Ewok_Parka_Male_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>60</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <tradeability>Sellable</tradeability>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1800</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.55</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>StarWarsRaces_EwokApparelCategory</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>StarWarsRaces/Ewok/Clothing/Ewok_Parka</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>StarWarsRaces_EwokApparelTag</li>
      </tags>
      <defaultOutfitTags>
        <li>StarWarsRaces_EwokApparelTag</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <generateCommonality>0.01</generateCommonality>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.4,0.3,0.15)</only>
        </li>
        <li>
          <weight>15</weight>
          <only>(0.6,0.45,0.18)</only>
        </li>
        <li>
          <weight>20</weight>
          <only>(0.8,0.6,0.23)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>