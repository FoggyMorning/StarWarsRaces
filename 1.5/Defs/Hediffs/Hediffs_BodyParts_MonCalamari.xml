<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- No Texure Bionic eye for Mon Calamari -->

  <HediffDef ParentName="AddedBodyPartBase">
    <defName>StarWarsRaces_MonCalamari_BionicEye</defName>
    <label>bionic eye</label>
    <labelNoun>a bionic eye</labelNoun>
    <description>An installed bionic eye. With its biogel nerve-link, internal signal pre-processor, and wide-spectrum sensors, it is better than a biological eye in almost every way. A lattice-dust healing system allows it to recover from damage.</description>
    <descriptionHyperlinks>
      <ThingDef>BionicEye</ThingDef>
    </descriptionHyperlinks>
    <spawnThingOnRemoved>BionicEye</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1.25</partEfficiency>
      <betterThanNatural>true</betterThanNatural>
    </addedPartProps>
    <renderNodeProperties>
      <li Class="PawnRenderNodeProperties_Eye">
        <workerClass>PawnRenderNodeWorker_HediffEye</workerClass>
        <texPath>Things/notexture</texPath>
        <parentTagDef>Head</parentTagDef>
        <drawSize>0.15</drawSize>
        <drawData>
          <defaultData>
            <layer>56</layer>
            <offset>(0, 0, -0.25)</offset>
          </defaultData>
          <dataWest>
            <flip>true</flip>
          </dataWest>
        </drawData>
      </li>
    </renderNodeProperties>
  </HediffDef>


  <RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
    <defName>StarWarsRaces_MonCalamari_InstallBionicEye</defName>
    <label>install bionic eye</label>
    <description>Install a bionic eye for a Mon Calamari.</description>
    <descriptionHyperlinks>
      <ThingDef>BionicEye</ThingDef>
      <HediffDef>StarWarsRaces_MonCalamari_BionicEye</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing bionic eye.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>BionicEye</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>BionicEye</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>StarWarsRaces_MonCalamari_Eye</li>
    </appliedOnFixedBodyParts>
    <addsHediff>StarWarsRaces_MonCalamari_BionicEye</addsHediff>
  </RecipeDef>


  <!-- No Texture Archotech eye for Mon Calamari -->

  <HediffDef ParentName="AddedBodyPartBase">
    <defName>StarWarsRaces_MonCalamari_ArchotechEye</defName>
    <label>archotech eye</label>
    <labelNoun>an archotech eye</labelNoun>
    <description>An installed archotech eye. It perceives every type of electromagnetic radiation, including radio waves, infrared, light, x-rays, and gamma rays. Its visual acuity is precise enough to read handwriting from twenty meters away. It can emit various wavelengths of radiation like a flashlight, and has an internal subpersona AI which helps highlight useful visual information. Its internal workings are a mystery to human minds.</description>
    <descriptionHyperlinks>
      <ThingDef>ArchotechEye</ThingDef>
    </descriptionHyperlinks>
    <spawnThingOnRemoved>ArchotechEye</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1.50</partEfficiency>
      <betterThanNatural>true</betterThanNatural>
    </addedPartProps>
    <renderNodeProperties>
      <li Class="PawnRenderNodeProperties_Eye">
        <workerClass>PawnRenderNodeWorker_HediffEye</workerClass>
        <texPath>Things/notexture</texPath>
        <parentTagDef>Head</parentTagDef>
        <drawSize>0.15</drawSize>
        <drawData>
          <defaultData>
            <layer>56</layer>
            <offset>(0, 0, -0.25)</offset>
          </defaultData>
          <dataWest>
            <flip>true</flip>
          </dataWest>
        </drawData>
      </li>
    </renderNodeProperties>
  </HediffDef>

  <RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
    <defName>StarWarsRaces_MonCalamari_InstallArchotechEye</defName>
    <label>install archotech eye</label>
    <description>Install an archotech eye.</description>
    <descriptionHyperlinks>
      <ThingDef>ArchotechEye</ThingDef>
      <HediffDef>StarWarsRaces_MonCalamari_ArchotechEye</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing archotech eye.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ArchotechEye</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ArchotechEye</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>StarWarsRaces_MonCalamari_Eye</li>
    </appliedOnFixedBodyParts>
    <addsHediff>StarWarsRaces_MonCalamari_ArchotechEye</addsHediff>
  </RecipeDef>

</Defs>