<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Hood stats -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>StarWarsRaces_TwilekHeadCovering</defName>
    <label>twi'lek head wrap</label>
    <thingCategories>
      <li>StarWarsRaces_TwilekHatCategory</li>
    </thingCategories>
    <techLevel>Neolithic</techLevel>
    <recipeMaker>
      <researchPrerequisite>StarWarsRaces_TwilekBasicHats</researchPrerequisite>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>1</Crafting>
      </skillRequirements>
      <displayPriority>125</displayPriority>
    </recipeMaker>
    <description>A simple head covering with openings for Lekku.</description>
    <graphicData>
      <texPath>StarWarsRaces/Twilek/Hats/Head_Cover1_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
      <li>Fabric</li>
    </stuffCategories>
    <uiIconScale>1.15</uiIconScale>
    <statBases>
      <WorkToMake>6000</WorkToMake>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>0.1</Mass>
      <EquipDelay>0.8</EquipDelay>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.2</SocialImpact>
    </equippedStatOffsets>
    <generateCommonality>0.01</generateCommonality>
    <apparel>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
      <wornGraphicPath>StarWarsRaces/Twilek/Hats/Head_Cover1</wornGraphicPath>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>StarWarsRaces_TwilekApparelTag</li>
      </tags>
      <defaultOutfitTags>
        <li>StarWarsRaces_TwilekApparelTag</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>


  <!-- a tuque -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>StarWarsRaces_TwilekTuque</defName>
    <label>twi'lek tuque</label>
    <thingCategories>
      <li>StarWarsRaces_TwilekHatCategory</li>
    </thingCategories>
    <recipeMaker>
      <researchPrerequisite>StarWarsRaces_TwilekBasicHats</researchPrerequisite>
      <displayPriority>105</displayPriority>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <description>A soft, thick cap. Great for keeping warm in winter, but with openings for Lekku.</description>
    <graphicData>
      <texPath>StarWarsRaces/Twilek/Hats/Tuque_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.25</uiIconScale>
    <costStuffCount>20</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>1200</WorkToMake>
      <Mass>0.07</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.50</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <equippedStatOffsets></equippedStatOffsets>
    <generateCommonality>0.01</generateCommonality>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>StarWarsRaces/Twilek/Hats/Tuque</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>StarWarsRaces_TwilekApparelTag</li>
      </tags>
      <defaultOutfitTags>
        <li>StarWarsRaces_TwilekApparelTag</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3,1)</min>
          <max>(0.5,0.5,0.5,1)</max>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9,1)</only>
        </li>
      </options>
    </colorGenerator>
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>

